{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@todo-app/utilities/(.*)": "<rootDir>/../libs/utilities/",
    "@todo-app/utilities": "<rootDir>/../libs/utilities/",
    "@todo-app/constants/(.*)": "<rootDir>/../libs/constants/",
    "@todo-app/constants": "<rootDir>/../libs/constants/"
  }
}